{
  "name": "london-grid",
  "description": "A modified version of the Ghost London theme",
  "version": "1.0.0",
  "engines": {
    "ghost": ">=4.0.0",
    "ghost-api": "v4"
  },
  "license": "MIT",
  "scripts": {
    "dev": "gulp",
    "zip": "gulp zip",
    "test": "gscan .",
    "test:ci": "gscan --fatal --verbose .",
    "pretest": "gulp build",
    "preship": "npm run test",
    "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then npm run version && git push --follow-tags; fi"
  },
  "author": {
    "name": "Chris Barry",
    "email": "me@chrisb.xyz"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Magazine"
    ]
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/chrisw-b/london-grid.git"
  },
  "bugs": "https://github.com/chrisw-b/london-grid/issues",
  "contributors": "https://github.com/chrisw-b/london-grid/graphs/contributors",
  "browserslist": [
    "defaults"
  ],
  "devDependencies": {
    "autoprefixer": "10.2.5",
    "cssnano": "4.1.10",
    "gscan": "4.0.1",
    "gulp": "4.0.2",
    "gulp-livereload": "4.0.2",
    "gulp-postcss": "9.0.0",
    "gulp-sourcemaps": "3.0.0",
    "gulp-uglify": "3.0.2",
    "gulp-util": "3.0.8",
    "gulp-watch": "5.0.1",
    "gulp-zip": "5.1.0",
    "postcss": "8.2.8",
    "postcss-color-function": "4.1.0",
    "postcss-custom-properties": "11.0.0",
    "postcss-easy-import": "3.0.0"
  },
  "config": {
    "posts_per_page": 10,
    "image_sizes": {
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1200
      },
      "xl": {
        "width": 2000
      }
    }
  }
}
